<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".activity.DetalleReservaActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardReserva"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/txtCodigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Código: H001"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2C3E50" />

            <TextView
                android:id="@+id/txtCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cliente: John Doe"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:textColor="#34495E" />

            <TextView
                android:id="@+id/txtFechas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fechas: 01/06/2025 al 05/06/2025"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#566573" />

            <TextView
                android:id="@+id/txtPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio: $500.00"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#566573" />

            <TextView
                android:id="@+id/txtTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo: Hotel - Doble"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#566573" />

            <TextView
                android:id="@+id/txtInfoAdicional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información adicional: Sin información"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#566573" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>